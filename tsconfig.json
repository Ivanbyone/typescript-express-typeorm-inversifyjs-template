{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "strict": false,
        "pretty": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "listEmittedFiles": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noStrictGenericChecks": false,
        "moduleResolution": "nodenext",
        "skipDefaultLibCheck": true,
        "inlineSources": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": ["./src/**/*.ts"],
    "exclude": [
        "node_modules",
        "dist",
        "./test/**/*.spec.ts"
    ]
}